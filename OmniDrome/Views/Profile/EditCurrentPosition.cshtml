<div class="test">
    <table>
        <tr>
            <td>
                <strong>Title:</strong>
            </td>
            <td>
                <input type="text" class="form-control" ng-model="CurrentPositionModel.title" />
            </td>
        </tr>
        <tr>
            <td>
                <strong>Type:</strong>
            </td>
            <td>
                <select class="form-control" ng-model="CurrentPositionModel.type">
                    <option value="">--Select --</option>
                    <option ng-repeat="type in Types" value="{{type.Id}}" ng-selected="type.Id == CurrentPositionModel.type">{{type.Name}}</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Start Date:</strong>
            </td>
            <td>
                <input type="date" class="form-control" ng-model="CurrentPositionModel.startDate" />
            </td>
        </tr>
        <tr>
            <td>
                <strong>Description:</strong>
            </td>
            <td>
                <input type="text" class="form-control" ng-model="CurrentPositionModel.description" />
            </td>
        </tr>
        <tr>
            <td>
                <button type="button" ng-click="UpdateCurrentPosition();" class="btn btn-primary">Update</button>
            </td>
            <td>
                <button type="button" ng-click="Cancel();" class="btn btn-primary">Cancel</button>
            </td>
        </tr>

    </table>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $.zoomooz.setup({ nativeanimation: true, debug: false });
        $(".cd-horizontal-timeline").click(function (evt) {
            if (evt.target !== this)
                return;
            evt.stopPropagation();
            $(this).zoomTo({ duration: 1000, targetsize: 0.6 });

        })
    });
</script>