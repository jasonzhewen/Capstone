@model OmniDrome.ViewModels.PersonalDetailsViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderSection{
    @Scripts.Render("~/bundles/timeline")
    @Styles.Render("~/Content/timeline")
    @Styles.Render("~/Content/profile")
    @Scripts.Render("~/bundles/zoomCircle")
}

<div id="mainProfile">
    <div class="grid" id="firstCircle">
        <div class="main">
            <div class="circle zoomTarget" style="background: green;">
                <div class="info-wrap">
                    <div class="ch-info">
                        <div class="ch-info-front ch-img-1"></div>
                        <div class="ch-info-back">
                            <img alt="No Image" src="@Url.Content(Model.personalDetailsModel.imageUrl)" /><br/>
                            Name: @Model.personalDetailsModel.firstName @Model.personalDetailsModel.lastName <br/>
                            Contact Number: @Model.personalDetailsModel.contactNumber <br/>
                            Profession: @Model.personalDetailsModel.profession <br/>
                            City: @Model.personalDetailsModel.currentCity <br/>
                            Country: @Model.personalDetailsModel.currentCountry <br/>
                            Date of Birth: @Model.personalDetailsModel.dateOfBirth<br/>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>



    <div class="gridPast" id="secondCircle">
        <div class="mainPast">
            <div class="circlePast zoomTarget" style="background: green;">
                <div class="info-wrapPast">
                    <div class="ch-infoPast">
                        <div class="ch-info-frontPast ch-img-1"></div>
                        <div class="ch-info-backPast">
                            <h3>TimeLine</h3>
                            
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <div class="gridPast" id="thirdCircle">
        <div class="mainPast">
            <div class="circlePast zoomTarget" style="background: green;">
                <div class="info-wrapPast">
                    <div class="ch-infoPast">
                        <div class="ch-info-frontPast ch-img-1"></div>
                        <div class="ch-info-backPast">
                            <h3>Where am I now</h3>
                            @{Html.RenderAction("CurrentPositionPartial");}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>



    <div class="gridPast" id="fourthCircle">
        <div class="mainPast">
            <div class="circlePast zoomTarget" style="background: green;">
                <div class="info-wrapPast">
                    <div class="ch-infoPast">
                        <div class="ch-info-frontPast ch-img-1"></div>
                        <div class="ch-info-backPast">
                            <h3>Where I want to go</h3>
                            @Html.Partial("DreamJobPartial")
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @{Html.RenderAction("TimeLinePartial");}
</div>


